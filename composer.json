{
  "name": "fabithub/inertia-ci4",
  "description": "The Codeigniter 4 adapter for inertia.js",
  "version": "0.0.1",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Krishna Gujjjar",
      "email": "krishnagujjjar@gmail.com"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "autoload": {
    "psr-4": {
      "Inertia\\": "src/"
    }
  },
  "require": {
    "php": "^8.0||^8.1||^8.2||^8.3",
    "codeigniter4/framework": "^4.3|^4.4"
  },
  "require-dev": {
    "codeigniter4/devkit": "^1.1",
    "icanhazstring/composer-unused": "^0.8.11",
    "qossmic/deptrac-shim": "^1.0"
  },
  "config": {
    "allow-plugins": {
      "phpstan/extension-installer": true
    }
  },
  "scripts": {
    "analyze": [
      "Composer\\Config::disableProcessTimeout",
      "phpstan analyze",
      "psalm",
      "rector process --dry-run",
      "@unused"
    ],
    "sa": "@analyze",
    "ci": [
      "Composer\\Config::disableProcessTimeout",
      "@cs",
      "@deduplicate",
      "@inspect",
      "@analyze",
      "@test"
    ],
    "cs": "php-cs-fixer fix --ansi --verbose --dry-run --diff",
    "cs-fix": "php-cs-fixer fix --ansi --verbose --diff",
    "style": "@cs-fix",
    "deduplicate": "phpcpd src/",
    "unused": "composer-unused",
    "inspect": "deptrac analyze --cache-file=build/deptrac.cache",
    "mutate": "infection --threads=2 --skip-initial-tests --coverage=build/phpunit",
    "test": "phpunit"
  }
}
